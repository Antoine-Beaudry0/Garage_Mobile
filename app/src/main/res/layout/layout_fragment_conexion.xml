<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idFragCon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    tools:context=".fragmentConexion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adresse_email"
            android:textAlignment="center"
            android:textColor="#E0E0E0"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/idEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="louis.martin@example.com"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tvmdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/mot_de_passe"
            android:textAlignment="center"
            android:textColor="#E0E0E0"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/idpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:text="password"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btConnexion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/white"
            android:text="@string/connexion"
            android:textColor="@color/black"
            android:textSize="20sp"
             />


        <TextView
            android:id="@+id/idou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/vous_n_tes_pas_membre"
            android:textAlignment="center"
            android:textColor="#E0E0E0"
            android:textColorLink="#3F51B5"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btInscription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:text="@string/inscription"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="20sp" />

    </LinearLayout>
</FrameLayout>
